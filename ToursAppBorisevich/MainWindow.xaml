<Window x:Class="ToursAppBorisevich.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToursAppBorisevich"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid  Panel.ZIndex="-2" Background="#FFDDE8D5"  >
            <Button x:Name="BtnBack" Content="Назад" HorizontalAlignment="Left" Margin="707,30,0,0" VerticalAlignment="Top" Width="75" Click="BtnBack_Click"/>
        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="296,19,0,0" TextWrapping="Wrap" Text="Отели и Гостиницы" VerticalAlignment="Top" FontSize="24"/>
        <Image HorizontalAlignment="Left" Height="65" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Source="Resources/png-transparent-azul-hotel-restaurant-computer-icons-gratis-bed-and-breakfast-hotel-text-rectangle-logo.png"/>
        <Grid Grid.Row="2" Background="#FF73AAEC" />
        <Frame x:Name="MainFrame" Grid.Row="1" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility='Hidden'/>
    </Grid>
</Window>
